/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-style:solid;
  border-width:10rpx;
  margin: 8px;
}

.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  margin: 15rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(83, 112, 136);
  font-size: 30rpx;
}

.usermotto {
  margin: 10px;
  color: rgb(83, 112, 136);
  font-size: 36rpx;
}

.card {
  border: 2px solid #4fc0c0;
  border-radius: 5px;
  background-color: #00ffff;
  box-shadow: 4px 1px 1px #cccccc;
  margin: 8px;
  position: relative;
}

.sender-nickname {
  color: rgb(83, 112, 136);
  font-size: 30rpx;
  margin: 15rpx;
}