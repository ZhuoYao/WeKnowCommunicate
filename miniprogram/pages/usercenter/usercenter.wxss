/* pages/usercenter/usercenter.wxss */
.card {
  border: 2px solid #4fc0c0;
  border-radius: 5px;
  background-color: #00ffff;
  box-shadow: 4px 1px 1px #cccccc;
  margin: 8px;
  position: relative;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-style:solid;
  border-width:10rpx;
  margin: 32rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 12rpx;
  border-radius: 50%;
}

.userinfo-vector {
  width: 512rpx;
  height: 256rpx;
  margin: 12rpx;
}

.userinfo-nickname {
  color: rgb(83, 112, 136);
  font-size: 32rpx;
  margin: 4rpx;
}

.userinfo-percent {
  color: rgb(83, 112, 136);
  font-size: 24rpx;
  margin: 8rpx;
}